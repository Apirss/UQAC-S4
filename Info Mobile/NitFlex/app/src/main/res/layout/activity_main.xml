<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Welcome_to_NitFlex"
        style="@style/nitflex.welcome"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/Welcome_to_NitFlex"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/Press_Start"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/Press_Start"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/photo"
        android:src="@drawable/nitflex_logo"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="@string/Start"
        style="@style/nitflex.start"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="afficherHello"/>


</LinearLayout>