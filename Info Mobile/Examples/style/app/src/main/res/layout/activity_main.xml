<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView 
        android:id="@+id/monLocale"
        android:text="@string/salutation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView 
        android:id="@+id/message"
        android:text="@string/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        style="@style/UQAC.Image"
        android:id="@+id/photo"
        android:contentDescription="@string/citoyen"
        android:src="@drawable/citoyen"
        />

    <Button
        style="@style/UQAC.Bouton"
        android:text="@string/ne_pas_cliquer_ici"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            style="@style/UQAC.Bouton.Magique" />
        <Button
            style="@style/UQAC.Bouton.Magique" />
        <Button
            style="@style/UQAC.Bouton.Magique" />
        <Button
            style="@style/UQAC.Bouton.Magique" />
    </LinearLayout>

</LinearLayout>
